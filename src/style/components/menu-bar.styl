.menu-bar
  width 100%
  background-color #105262
  background-image url("../img/bb-chrome/menu-bar-bg.png")
  padding  8px 0px 8px
  color white
  height menu-bar-height
  box-sizing border-box

  enable-flex(row)

  span, i
    padding-left 0.5em
    padding-right 0.5em

  .menu-bar-content-filename
    flex-content()

  .menu-bar-file-status
    label-font()
    color #fff
    background-color #f00
    padding 2px 7px
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;


